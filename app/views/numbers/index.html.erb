<main class="Tax">
<h1 class="tax-index">税率・送料一覧</h1>

<div class="tax-fee">
 <% @tax_rate.each do |t| %>
   <table class="tax">
      <tr>
        <th>税率</th>
        <th>更新日</th>
      </tr>

      <tr>
        <td><%= t.tax_rate %></td>
        <td><%= t.created_at.strftime('%Y/%m/%d %H:%M') %></td>
      </tr>
   </table>
  <% end %>


  <% @shipping_fee.each do |s| %>

   <table class="fee">
       <tr>
        <th>送料</th>
        <th>更新日</th>
       </tr>

      <tr>
        <td><%= s.shipping_fee %></td>
        <td><%= s.created_at.strftime('%Y/%m/%d %H:%M') %></td>
      </tr>
   </table>
  </div>
  <% end %>
</main>