<div class="lll">
	<h1 class="osiharai">お支払方法</h1>
	<%= form_with url:orders_path,model: Order.new do |o| %>
	<label class="daibiki">
		<%=o.radio_button :payment_methods, "代引き"%>代引き(ドローン配送)
	</label>
	<label class="hurikomi">
		<%=o.radio_button :payment_methods, "銀行振込"%>銀行振込
	</label>
	<label class="kureka">
		<%=o.radio_button :payment_methods, "クレジット払い"%>クレジット払い
	</label>

	<h1 class="zuuusyo">住所選択</h1>
	<%#= form_with url:orders_path,model:[] do |n| %>
	<div class="sss">
		<label class="sin">
			<%= o.radio_button :addressee, '' %>新しい住所を設定する
		</label>
	</div>

	<div class="b">
		<label class="atesaki">宛先</label>
		<%= o.text_field :addressee , :size => "30*30"%>
	</div>

	<div class="b">
		<label class="dennwa">電話番号</label>
		<%= o.text_field :phone_number %>
	</div>

	<div class="b">
		<label class="yuubin">郵便番号</label>
		<%= o.text_field :postal_code  %>
	</div>

	<div class="b">
		<label class="zyuusyo">住所</label>
		<%= o.text_field :address , :size => "100*100" %>
	</div>

	<label class="okurisaki1">
		<%= o.radio_button :addressee, @end_user_home %>
		<p>自宅</p>
		<p>宛先:<%= @end_user_home %></p>
		<p>〒<%= @end_user_homes %></p>
		<p>住所:<%= @end_user_homess %></p>
	</label>

	<%# binding.pry %>

	<% if @delivery_addressee.present? %>
	<% i = 0 %>
	<% @delivery_addressee.each do |d| %>
	<label class="okurisaki">
		<%= o.radio_button :addressee, d.addressee %>
		<% i+=1 %>
		<p>送り先<%= i %></p>
		<p>宛先:<%= d.addressee %></p>
		<p>〒<%= d.postal_code %></p>
		<p>住所:<%= d.address %></p>
	</label>
	<% end %>
	<% end %>

	<div >
		<%= o.submit"購入確定画面へ" , class: "foot_blo_left1", :style=>"color:white;", :size => "30*30" %>
	</div>

	<% end %>
</div>



