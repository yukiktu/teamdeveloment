<h1>受注画面</h1>
<% @oders.each do |t| %>
	<table class = "orders_table">
		<caption class="table_top">
			<div class="order_status">
				<!-- <option value="0" style="color: #ff0000;">未発送</option>
				<option value="1" style="color: #0000ff;">発送済み</option> -->
			<%# s_options = [["未発送", 0],["発送済み", 1]] %>
			<%#= t.form.select :delivery_status, s_options %>
			<% if t.delivery_status == 0 %>
				<%= form_for t do |f| %>
				<%= f.hidden_field :delivery_status, value: 1 %>
				<%= f.submit'発送する' %>
				<% end %>
			<% else #t.delivery_status == 1 %>
				<%= form_for t do |f| %>
				<%= f.hidden_field :delivery_status, value: 0 %>
				<%= f.submit'発送取り消し' %>
				<% end %>
			<% end %>
			</div>
			<div class = "post">
				宛名：<%= t.addressee%><br>
				〒<%= t.postal_code %><br>
				住所：<%= t.address %>
			</div>
		</caption>
		<thead>
			<tr>
				<th width="10%">購入日</th>
				<th width="10%">購入者</th>
				<th width="20%">商品</th>
				<th width="10%">アーティスト</th>
				<th width="10%">枚数</th>
				<th width="15%">総計(税込み) <%= t.grand_total %>円</th>
			</tr>
		</thead>
			<tbody>
			<% t.order_items.each_with_index do |i, index| %>
				<tr>
					<% if index == 0 %>
						<td><%= t.created_at %></td>
						<td><%= t.end_user.last_name %> <%= t.end_user.first_name %></td>
					<% else %>
						<td></td>
						<td></td>
					<% end %>
					<td><%= i.item_name %></td>
					<td><%= i.artist_name %></td>
					<td><%= i.item_count %></td>
					<% subtotal = 0 %>
					<% subtotal = i.list_price * i.item_count * i.tax_rate %>
					<td>小計(税込み) <%= subtotal %>円</td>
				</tr>
			</tbody>
		<% end %>
	</table>
<% end %>