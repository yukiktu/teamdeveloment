
<div class="i-main">
<div class="i-search">
<%= form_tag(search_path,:method => 'get') do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search', :item_name => nil, class: "entry_field11" %>
<% end %>
</div>
	<% @items.each do |i| %>
		<div class="oneitem">
				<%= link_to(item_path(i)) do %>
					<% i.gacket_images.each_with_index do |gacket_image, index| %>
						<% if index == 0 %>
							<div class="j-image">
								<%=attachment_image_tag gacket_image, :image, :fill, 240, 240 %>
							</div>
						<% end %>
					<% end %>
					<p class="i-name"><%= i.item_name %></p>
				<% end %>
				<div class="aaa">
				<p class="i-artist"><%= i.artist.artist_name %></p>
				
				<span class="i-price">Â¥<%= i.list_price.to_i %></span>
			</div>
			</div>
	<% end %>
</div>

	<div class="page"><%= paginate(@items) %></div>