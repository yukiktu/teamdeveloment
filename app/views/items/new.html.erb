<% @item.errors.full_messages.each do |message| %>
  <p><%= message %></p>
<% end %>


 <h1>新規商品登録</h1>

<%= form_for(@item) do |f| %>

<div class="field">
   <%= f.label :商品名 %>
   <%= f.text_field :item_name %>
</div>

<div class="field">
   <%= f.label :販売価格 %>
   <%= f.text_field :list_price %>
</div>

<div class="field">
　 <%= f.label :原価 %>
   <%= f.text_field :cost_price %>
</div>

<div class="field">
   <%= f.label :販売ステータス %>
   <%= f.text_field :sales_status %>
</div>

<div class="field">
   <%= f.label :発売日 %>
   <%= f.text_field :release_date %>
</div>

<div class="disc-form">
 <%= f.fields_for :discs do |d| %>
  <div class="form-groups">
     <%= d.label :ディスク名 %>
     <%= d.text_field :disc_name %>
     <%= d.label :ディスク番号 %>
     <%= d.text_field :disc_number %>
  </div>
 <% end %>
</div>

<div class="song-form">
 <%= f.fields_for :song do |s| %>
   <div class="form-group">
     <%= s.label :曲順 %>
     <%= s.text_field :recording_number %>
     <%= s.label :曲名 %>
     <%= s.text_field :song_title %>
     <%= s.label :タイム %>
     <%= s.text_field :play_time %>
   </div>
 <% end %>
</div>

 <div class="actions">
   <%= f.submit "保存する" %>
 </div>

 <% end %>
