<link rel="stylesheet" type="text/css" href="devise.css">


<!-- <div class="devise_background_img"> -->

<h1 class="welcom_message">WELCOME NAGANO RECORD</h1>
<div class="end_user_infomation">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <!--autocomplete消してあります。実装可能性でしたら追記してください。-->
      <div class="entries_field">
        <div class="field"> <label class="labels-sei">姓</label>
          <%= f.text_field :last_name, autofocus: true, class: "field_box_sei" %>
           <label class="labels-mei">名</label>
          <%= f.text_field :first_name, autofocus: true, class: "field_box_mei" %>
        </div>
        <div class="field"> <label class="labels-sei">フリガナ(姓)</label>
          <%= f.text_field :kana_last_name, autofocus: true, class: "field_box_sei" %>
        <label class="labels-mei">フリガナ(名)</label>
          <%= f.text_field :kana_first_name, autofocus: true, class: "field_box_mei" %>
        </div>
        <div class="field"> <label class="labels">郵便番号</label>
          <%= f.text_field :postal_code, autofocus: true, class: "field_box" %>
        </div>
        <div class="field"> <label class="labels">住　所</label>
          <%= f.text_field :address, autofocus: true, class: "field_box" %>
        </div>
        <div class="field"> <label class="labels">電話番号</label>
          <%= f.text_field :phone_number, autofocus: true, class: "field_box" %>
        </div>
        <div class="field"> <label class="labels">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field_box" %>
        </div>
        <div class="field">
          <%= f.label :パスワード, class: "labels" %>
            <% if @minimum_password_length %>
              <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
              <% end %>
                <%= f.password_field :password, autocomplete: "new-password", class: "field_box" %>
        </div>
        <div class="field">
          <%= f.label :確認用パスワード, class: "labels" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field_box" %>
        </div>
        <div class="actions">
          <%= f.submit "新規登録", class: "buttons" %>
        </div>
        <% end %>
          <%= render "devise/shared/links" %>
      </div>
</div>
